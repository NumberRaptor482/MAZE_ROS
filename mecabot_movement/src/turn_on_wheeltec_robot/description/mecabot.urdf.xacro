<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mecabot">

  <!-- Gazebo System Plugins -->
  <gazebo>
    <!-- DiffDrive plugin for movement -->
    <plugin name="ignition::gazebo::systems::DiffDrive" filename="ignition-gazebo-diff-drive-system">
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      <wheel_separation>0.45</wheel_separation>
      <wheel_radius>0.1</wheel_radius>
    </plugin>
    
    <!-- MISSING PIECE: OdometryPublisher plugin -->
    <plugin name="ignition::gazebo::systems::OdometryPublisher" filename="ignition-gazebo-odometry-publisher-system">
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <odom_publish_frequency>50</odom_publish_frequency>
    </plugin>
    
    <plugin name="ignition::gazebo::systems::ImuSensor" filename="ignition-gazebo-imu-sensor-system">
        <topic>/imu/data_raw</topic>
        <update_rate>50</update_rate>
    </plugin>
  </gazebo>

  <!-- Robot Links and Joints -->
  <link name="base_footprint"/>

  <link name="base_link">
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0" izz="0.2"/>
    </inertial>
    <visual>
      <geometry><box size="0.6 0.4 0.15"/></geometry>
      <material name="blue"><color rgba="0.0 0.0 0.8 1.0"/></material>
    </visual>
    <collision>
      <geometry><box size="0.6 0.4 0.15"/></geometry>
    </collision>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </joint>

  <!-- Macro for the POWERED REAR wheels (with friction) -->
  <xacro:macro name="drive_wheel" params="prefix y_pos">
    <link name="${prefix}_wheel">
      <inertial><mass value="0.5"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
      <visual><origin rpy="1.5707 0 0"/><geometry><cylinder radius="0.1" length="0.05"/></geometry><material name="black"/></visual>
      <collision><origin rpy="1.5707 0 0"/><geometry><cylinder radius="0.1" length="0.05"/></geometry></collision>
    </link>
    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="base_link"/><child link="${prefix}_wheel"/><origin xyz="-0.2 ${y_pos} 0" rpy="0 0 0"/><axis xyz="0 1 0"/>
    </joint>
    <gazebo reference="${prefix}_wheel">
      <mu1>1.0</mu1><mu2>2.0</mu2><kp>1000000.0</kp><kd>100.0</kd><material>Gazebo/Black</material>
    </gazebo>
  </xacro:macro>

  <!-- Macro for the FRICTIONLESS FRONT caster wheels -->
  <xacro:macro name="caster_wheel" params="prefix y_pos">
    <link name="${prefix}_wheel">
      <inertial><mass value="0.1"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
      <visual><geometry><sphere radius="0.1"/></geometry><material name="black"/></visual>
      <collision><geometry><sphere radius="0.1"/></geometry></collision>
    </link>
    <joint name="${prefix}_wheel_joint" type="fixed"> <!-- Note: Joint is now 'fixed' -->
      <parent link="base_link"/><child link="${prefix}_wheel"/><origin xyz="0.2 ${y_pos} 0" rpy="0 0 0"/>
    </joint>
    <gazebo reference="${prefix}_wheel">
      <mu1>0.0</mu1><mu2>0.0</mu2><material>Gazebo/Black</material>
    </gazebo>
  </xacro:macro>

  <!-- Create the wheels using the appropriate macros -->
  <drive_wheel prefix="rear_left"  y_pos="0.225"/>
  <drive_wheel prefix="rear_right" y_pos="-0.225"/>
  <caster_wheel prefix="front_left"  y_pos="0.225"/>
  <caster_wheel prefix="front_right" y_pos="-0.225"/>

</robot>
